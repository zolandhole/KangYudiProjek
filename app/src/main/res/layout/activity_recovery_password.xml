<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="top|center"
    android:orientation="vertical">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="@color/colorAccent2"
        android:id="@+id/content_recovery"
        android:text="Pilih pertanyaan keamanan Anda dan berikan jawaban yang benar untuk pemulihan"/>


    <Spinner
        android:id="@+id/questionsSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:layout_below="@id/content_recovery"
        android:background="@drawable/spinner_background"


        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionsSpinner"
        android:layout_marginTop="32dp"
        >

        <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/answer"
            android:textColorHint="@color/secondaryLightColor"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:paddingLeft="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/spinner_background"
            />
    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pulihkan"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="16dp"
        android:textColor="#fff"
        android:backgroundTint="@color/colorAccent2"
        />


</RelativeLayout>
